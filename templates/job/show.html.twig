{% extends "base.html.twig" %}

{% block body %}
    <h1 class="my-4">{{ job.position }}</h1>
    <div class="row">
        <div class="col-md-7">
            <p>{{ job.description }}</p>
            <p>Posted on {{ job.createdAt|date("m/d/Y") }}</p>
        </div>
        <div class="col-md-5">
            <img class="img-fluid rounded mb-3 mb-md-0" src="{{ asset('images/' ~ job.logo) }}" alt="{{ job.company }}">
        </div>
    </div>
{% endblock %}
